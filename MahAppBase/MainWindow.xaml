<controls:MetroWindow
    x:Class="MahAppBase.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalondock="http://schemas.xceed.com/wpf/xaml/avalondock"
    xmlns:behaviors="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:MahAppBase"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=""
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Opacity="{Binding WindowOpacity}"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <behaviors:EventTrigger EventName="Closed">
            <behaviors:InvokeCommandAction Command="{Binding ClosedWindowCommand}" />
        </behaviors:EventTrigger>
    </i:Interaction.Triggers>
    <avalondock:DockingManager x:Name="mtTab" Grid.Row="0">
        <avalondock:DockingManager.Theme>
            <avalondock:MetroTheme />
        </avalondock:DockingManager.Theme>
        <avalondock:LayoutRoot>
            <avalondock:LayoutPanel DockHeight="150">
                <avalondock:LayoutAnchorablePane>
                    <avalondock:LayoutAnchorable
                        Title="功能"
                        AutoHideWidth="240"
                        CanAutoHide="False"
                        CanClose="False"
                        CanFloat="True"
                        CanHide="False"
                        ContentId="properties">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <StackPanel
                                    Grid.Row="0"
                                    Margin="10,10,3,3"
                                    Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding ForceFocus}">搶走電腦Focus</CheckBox>
                                    <Button
                                        Margin="10,0,0,0"
                                        Command="{Binding SendSOSCommand}"
                                        Content="TestSOS" />
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="1"
                                    Margin="10,3,3,3"
                                    Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IgnoreT028}">T028不通知</CheckBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="2"
                                    Margin="10,3,3,10"
                                    Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding ForceFocus}">IT呼叫不通知</CheckBox>
                                </StackPanel>
                                <StackPanel Grid.Row="3" Orientation="Horizontal">
                                    <TextBlock Text="視窗透明度" />
                                    <Slider
                                        Width="200"
                                        Margin="20,0,0,0"
                                        Maximum="1"
                                        Minimum="0.3"
                                        Value="{Binding WindowOpacity}" />
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    FontSize="18"
                                    Text="正式環境收到的訊息" />
                                <TextBox
                                    x:Name="tbFormal"
                                    Grid.Row="2"
                                    Text="{Binding FormalEnvironmentMessage}" />
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="10" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    FontSize="18"
                                    Text="測試環境收到的訊息" />
                                <TextBox
                                    x:Name="tbSIT"
                                    Grid.Row="2"
                                    Text="{Binding SITEnvironmentMessage}" />
                            </Grid>
                        </Grid>
                    </avalondock:LayoutAnchorable>
                </avalondock:LayoutAnchorablePane>
            </avalondock:LayoutPanel>
        </avalondock:LayoutRoot>
    </avalondock:DockingManager>
</controls:MetroWindow>
